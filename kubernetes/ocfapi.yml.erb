apiVersion: v1
kind: Service
metadata:
  name: ocfapi-service
spec:
  selector:
    app: ocfapi
  ports:
    - port: 80
      targetPort: 80

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ocfapi-deployment
  labels:
    app: ocfapi
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ocfapi
  template:
    metadata:
      labels:
        app: ocfapi
    spec:
      containers:
        - name: ocfapi
          env:
          - name: MAX_WORKERS
            value: "4"
          image: "docker.ocf.berkeley.edu/ocfapi:<%= version%>"
          resources:
            limits:
              memory: 256Mi
              cpu: 500m
          ports:
            - containerPort: 80
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: api.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: ocfapi-service
              servicePort: 80